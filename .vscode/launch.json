{
     // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Debugger",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--host=0.0.0.0",
                "--port=7860",
                "--reload"
            ],
            "jinja": false,
            "justMyCode": true,
            "cwd": "${workspaceFolder}/backend"
        },
        {
            "name": "Branch_MobileSpeechRecognition",
            "request": "launch",
            "type": "dart",
            "args": [
                "-v"
            ],
            "cwd": "${workspaceFolder}/flutter_app"
        },
        {
            "name": "Branch_MobileSpeechRecognition (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "cwd": "${workspaceFolder}/flutter_app"
        },
        {
            "name": "Branch_MobileSpeechRecognition (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "cwd": "${workspaceFolder}/flutter_app"
        }
    ]
}